#include <bits/stdc++.h> 
void swap(int*a,int *b){
        int temp=*a;
        *a=*b;
        *b=temp;
    }
void sort012(int *arr, int n)
{
   //   Write your code here   
    
//normal sorting algorithm

   //  void sortColors(vector<int>& nums) {
        // int n = nums.size();
        // for(int i=0;i<n-1;i++){
        //     for(int j=i+1;j<n;j++){
        //         if(nums[i]>nums[j]){
        //             swap(&nums[i],&nums[j]);
        //         }
        //     }
        // }
        int low=0,mid=0,high=n-1;
        while(mid<=high){
        if(arr[mid]==0){
            swap(&arr[low],&arr[mid]);
            low++;
            mid++;
        }
        else if(arr[mid]==1){
            mid++;
        }
        else{
            swap(&arr[mid],&arr[high]);
            high--;
        }
    }
    }
